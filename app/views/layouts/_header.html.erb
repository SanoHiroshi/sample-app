<header class="navbar navbar-fixed-top">

  <div class="container">
    <%= link_to "RailsAPP", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to root_path do %>
            <%= fa_icon "home", class: "fa-2x" %>
          <% end  %>
        </li>
        <li><%= link_to help_path do %>
          <%= fa_icon "question-circle", class: "fa-2x" %>
          <% end  %>
        </li>

        <% if logged_in? %>
          <li><%= link_to users_path do %>
                <%= fa_icon "twitter", class: "fa-2x" %>
              <% end  %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= fa_icon "wpforms", class: "fa-2x" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
            <li><%= link_to "入力",  new_user_diet_path(current_user) %></li>
            <li><%= link_to "グラフ", user_diets_path(current_user) %></li>
          </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= fa_icon "user", class: "fa-2x" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to current_user do %>
                    <%= fa_icon "user", class: "fa-2x" %> Profile
                  <% end  %>
              </li>
              <li><%= link_to edit_user_path(current_user) do %>
                    <%= fa_icon "wrench", class: "fa-2x" %> Setting
                  <% end  %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>

