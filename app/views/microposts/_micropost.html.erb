<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %> <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span>
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  <span>
    <%= link_to 'いいね！', like_path(micropost.id), method: :post %>
  </span>
    <%= micropost.likes.count %>人
    <% if current_user.likes.find_by(micropost_id: micropost.id) %>
    <%= link_to '取り消す', unlike_path(micropost.id), method: :delete %>
    <% else %>
    <% end %>
  </span>
  <span>
    <%= link_to help_path do %>
      <%= fa_icon "reply" %>
    <% end  %>
  </span>
</li>
